<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Nullable>enable</Nullable>
        <UseWPF>true</UseWPF>
        <ImplicitUsings>enable</ImplicitUsings>
        <TargetFrameworks>net8.0-windows;net7.0-windows</TargetFrameworks>
        <Title>Logger library for .NET</Title>
        <Authors>Alexander Gorbunov</Authors>
        <Description>This library provides you to log messages into console and into file in AppData directory</Description>
        <Company>Link</Company>
        <AssemblyVersion>1.0.4</AssemblyVersion>
        <FileVersion>1.0.4</FileVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Copyright>Alexander Gorbunov &lt;sasha2000.gorbunov@gmail.com&gt;</Copyright>
        <RepositoryUrl>https://github.com/MrLinkDev/Lithium</RepositoryUrl>
        <PackageId>Alexander.Gorbunov.Lithium</PackageId>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Version>1.0.4</Version>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\..\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

    <PropertyGroup>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\..\LICENSE.txt" Pack="true" PackagePath="$(PackageLicenseFile)"/>
    </ItemGroup>

</Project>
